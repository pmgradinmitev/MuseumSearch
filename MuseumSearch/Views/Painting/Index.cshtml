@model PaintingsTableViewModel;

<div class="row">
    <div class="col-12">
        <h1>Списък с картини</h1>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex justify-content-end">
        <a asp-controller="Painting" asp-action="Create" class="btn btn-primary">Добави картина</a>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card mt-5 border-primary shadow-sm">
            <div class="card-header bg-primary bg-gradient text-white d-flex justify-content-between">
                <div>
                    <i class="bi bi-list"></i>Картини
                </div>
                <div>
                    @{
                        if (@Model.RecordsFiltered == @Model.RecordsTotal)
                        {
                            <div>Показани @Model.RecordsFiltered от общо @Model.RecordsTotal записа</div>
                        }
                        else if (@Model.RecordsFiltered == 0)
                        {
                            <div>Няма намерени записи</div>
                        }
                        else if (@Model.RecordsFiltered != @Model.RecordsTotal)
                        {
                            <div>Филтрирани @Model.RecordsFiltered от общо @Model.RecordsTotal записа</div>
                        }
                    }
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive" style="overflow-y: hidden">
                    <!-- align-middle text-nowrap -->
                    <table class="table table-bordered table-hover align-middle text-nowrap m-0" style="border-style: hidden;">
                        <thead class="text-center">
                            <tr>
                                <th></th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Author)
                                </th>
                                <th style="width: 75px;"></th>
                            </tr>
                            <tr>
                                <th>#</th>
                                <th>
                                    <div class="d-flex flex-row justify-content-center">
                                        <input type="text" asp-for="Name" form="id-search-form" class="form-control mx-1">
                                        <a asp-controller="Painting"
                                           asp-action="Index"
                                           asp-route-Author="@(Model.Author)"
                                           class="btn btn-light" tabindex="-1"><i class="bi bi-x"></i></a>
                                    </div>
                                </th>
                                <th>
                                    <div class="d-flex flex-row justify-content-center">
                                        <input type="text" asp-for="Author" form="id-search-form" class="form-control mx-1">
                                        <a asp-controller="Painting"
                                           asp-action="Index"
                                           asp-route-Name="@(Model.Name)"
                                           class="btn btn-light" tabindex="-1"><i class="bi bi-x"></i></a>
                                    </div>
                                </th>
                                <th>
                                    <form id="id-search-form" asp-controller="Painting" asp-action="Index" method="get">
                                        <button type="submit" class="btn btn-primary">Търси</button>
                                    </form>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var count = 1;
                                foreach (var obj in Model.Data)
                                {
                                    var collapseId = $"collapse-{count}";

                                    <tr>
                                        <td class="text-center">@(count++)</td>
                                        <td class="text-center">@obj.Name</td>
                                        <td class="text-center">@obj.Author</td>
                                        <td class="text-center">
                                            <div class="d-flex flex-row justify-content-center">
                                                <a asp-controller="Painting" asp-action="Update" asp-route-id="@(obj.Id)" title="Редактиране">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <form method="post" action="@Url.Action("Delete", "Painting")" onsubmit="return confirm('Наистина ли искате да изтриете тази картина: @obj.Name?');">
                                                    <input type="hidden" name="Id" value="@(obj.Id)" />
                                                    <button type="submit" style="border: none; color:#0d6efd; background-color: transparent;" title="Изтриване">
                                                        <i class="bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>